<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B93128"/> <!-- color al presionar -->
            <corners android:radius="100dp" />
            <stroke android:width="2dp" android:color="#B93128"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D43E32"/> <!-- color normal -->
            <corners android:radius="100dp" />
            <stroke android:width="2dp" android:color="#D43E32"/>
        </shape>
    </item>
</selector>
